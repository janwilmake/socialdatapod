{
  "$schema": "https://unpkg.com/wrangler@latest/config-schema.json",
  "name": "grokthyself",
  "compatibility_date": "2025-07-01",
  "main": "worker.ts",
  "routes": [
    { "custom_domain": true, "pattern": "grokthyself.com" },
    { "custom_domain": true, "pattern": "www.grokthyself.com" },
    { "pattern": "*.grokthyself.com/*", "zone_name": "grokthyself.com" },
    { "pattern": "grokthyself.com/*", "zone_name": "grokthyself.com" }
  ],
  "assets": { "directory": "./" },
  "observability": { "logs": { "enabled": true } },
  "durable_objects": {
    "bindings": [{ "name": "USER_DO", "class_name": "UserDO" }]
  },
  "migrations": [{ "tag": "v1", "new_sqlite_classes": ["UserDO"] }]
}
